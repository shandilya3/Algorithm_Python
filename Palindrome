
# Basic Palindrome 
def palindromeOrNot(string): 
    i=0
    j=len(string)-1
    while(i<j):
        if(string[i]==string[j]):
            i+=1
            j-=1
            if(i==j):
                print("palind")
                break
        else:
            print("not palind")
            break
            
palindromeOrNot("civic")

# all possible palidrome in a given string

def isPalindrom(word):
    i=0
    j=len(word)-1
    while(i<j):
        if(word[i]==word[j]):
            i+=1
            j-=1
            if(i==j):
              return True
        else:
            return False
print isPalindrom("civic1c")
def get_all_substrings_ofstring(input_string):
  length = len(input_string)
  return [input_string[i:j+1]
          for i in range(length)
          for j in range(i,length)]

